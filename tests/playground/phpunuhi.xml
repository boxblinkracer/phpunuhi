<phpunuhi>

    <translations>

        <set name="json" format="json" jsonIndent="2" sort="true">
            <file locale="de">./json/de.json</file>
            <file locale="en">./json/en.json</file>
            <file locale="nl">./json/nl.json</file>
        </set>

        <set name="ini" format="ini" sort="true">
            <file locale="de">./ini/de.ini</file>
            <file locale="en">./ini/en.ini</file>
        </set>

        <set name="ini_sections" format="ini" sort="true">
            <file locale="de" iniSection="de">./ini/ini_sections.ini</file>
            <file locale="en" iniSection="en">./ini/ini_sections.ini</file>
        </set>

        <set name="php" format="php" sort="true">
            <file locale="de">./php/de.php</file>
            <file locale="en">./php/en.php</file>
        </set>

    </translations>

</phpunuhi>
