<phpunuhi
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../xsd/phpunuhi.xsd"
>

    <translations>

        <set name="json">
            <format>
                <json indent="2" sort="true"/>
            </format>
            <styles>
                <style>kebab</style>
            </styles>
            <locales>
                <locale name="de">./de.json</locale>
                <locale name="nl">./nl.json</locale>
            </locales>

        </set>

    </translations>

</phpunuhi>
