<phpunuhi
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../xsd/phpunuhi.xsd"
>

    <imports>
        <import resource="./bundle/snippets.xml"/>
    </imports>

    <translations>

        <set name="json with newline">
            <format>
                <json indent="2" sort="true" eol-last="true"/>
            </format>
            <locales basePath="./snippets">
                <locale name="en">%base_path%/%locale%_newline.json</locale>
            </locales>
        </set>

    </translations>

</phpunuhi>
